[module/spotify]
click-left = bspc desktop -f media
click-right = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
type = custom/script
interval = 1
format-prefix = "ÓÉ¨ "
format = <label>
exec = python $HOME/.local/bin/spotify-status -f '{artist}: {song}'
format-underline = #1db954

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/fs-home]
type = internal/fs
interval = 25

mount-0 = /home/ethan

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/fs-root]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

