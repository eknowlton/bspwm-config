[module/dunst]
type = custom/ipc
initial = 1
format-foreground = ${colors.primary}

hook-0 = echo "%{T2}%{A1:notify-send "DUNST_COMMAND_PAUSE" && polybar-msg hook dunst 2:}ÓÜß%{A}" &
hook-1 = echo "%{T2}%{A1:notify-send "DUNST_COMMAND_RESUME" && polybar-msg hook dunst 1:}ÓÅπ%{A}" &
